//- index.pug
extends layout.pug

block content
    h3 Log In
    p  You may log into your account to start transcribing or to manage your projects.
    #resetPassword
        h6#forgetFormBtn.clear-right Forgot your Password?
        form#forgetForm.ui-corner-all(action='forgetPassword' method='POST')
            span Enter the email address associated with your account to have your password reset.
            input#email(type='email' placeholder='Forgot your password?' name='email')
            input(type='submit' name='emailSubmitted' value='Reset Password')
    form#login(action='login' method='POST')
        fieldset
            legend Login Here:
            label(for='uname') Email
            input.text(type='text' name='uname')
            label(for='password') Password
            input.text(type='password' name='password')
            input(type='submit' title='Log In' value='Log In')
    h3 Register a New Account
    form(action='signup' method='POST')
        fieldset
            legend or Register as a New User:
            | Note: You will receive your password via email after your account is activated by an administrator
            label(for='uname') Email
            input.text(type='email' name='uname')
            label(for='fname') First Name
            input.text(type='text' name='fname')
            label(for='lname') Last Name
            input.text(type='text' name='lname')
            input(type='submit' value='Register')
    a.returnButton(href='/') Return to TPEN Home
